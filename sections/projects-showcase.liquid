<section class="projects" id="projects"> 
  {% raw %}
  <h2 class="section-titles">{% My Projects %}</h2>
  {% endraw %}
  <div class="project-grid">
    {% for block in section.blocks %}
      <div class="project-card">
        <img src="{{ block.settings.image | image_url: width: 1000 }}" alt="{{ block.settings.title }}"
        width="450"
        height="400"
        class="project-image">
        <h3>{{ block.settings.title }}</h3>
        <p class="project-description">{{ block.settings.description }}</p>
        {% if block.settings.link != blank %}
          <a class="link-a" href="{{ block.settings.link }}" target="_blank">View Project</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Projects",
  "settings": [
    
  ],
  "blocks": [
    {
      "type": "project",
      "name": "Project",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Project Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Project Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Project Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Project Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Projects Showcase",
      "category": "Portfolio"
    }
  ]
}
{% endschema %}
