<section class="projects">
  <h2>{{ section.settings.title }}</h2>
  <div class="project-grid">
    {% for block in section.blocks %}
      <div class="project-card">
        <img src="{{ block.settings.image | image_url: width: 400, height: 400 }}" alt="{{ block.settings.title }}"
        width="400"
        height="400">
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.description }}</p>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" target="_blank">View Project</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Projects",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "My projects"
    }
  ],
  "blocks": [
    {
      "type": "project",
      "name": "Project",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Project Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Project Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Project Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Project Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Projects Showcase",
      "category": "Portfolio"
    }
  ]
}
{% endschema %}
